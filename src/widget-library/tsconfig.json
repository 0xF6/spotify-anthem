{
    "compilerOptions": {
      "target": "es5",                       
      "module": "commonjs",              
      "lib": [               
        "esnext",
        "dom"
      ],
      "declaration": true,
      "sourceMap": true, 
      "outDir": "./dist",
      "strict": false,
      "moduleResolution": "node",
      "typeRoots": [                   
        "node_modules/@types",
        "src/typings.d.ts"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,        
      "emitDecoratorMetadata": true 
    },
    "exclude": [
      "node_modules"
    ]
  }